/* 테이블 */
/* 테이블 스타일 */
table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

table th, table td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: center;
    font-size: 14px;
    white-space: nowrap; /* 텍스트 줄바꿈 방지 */
    overflow: hidden; /* 텍스트가 너무 길 경우 넘침 방지 */
    text-overflow: ellipsis; /* 넘치는 텍스트는 말줄임 표시 */
}

table th {
    background-color: #4CAF50; /* 초록색 */
    color: white;
    font-weight: bold;
}

table td {
    max-width: 200px; /* 셀의 최대 너비를 제한 */
    overflow: hidden;
    text-overflow: ellipsis; /* 텍스트가 너무 길 경우 말줄임표 표시 */
}

table tr:nth-child(even) {
    background-color: #f2f2f2; /* 짝수 행 배경색 */
}

table tr:hover {
    background-color: #ddd; /* 마우스 오버 시 배경색 */
}


