    padding: 0 15px;
    font-size: 14px;
    border-radius: 4px;
    cursor: pointer;
    height: 30px; /* 입력 필드와 동일한 높이 */
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
}

form button:hover {
    background-color: #e0e0e0; /* 버튼 호버 시 약간 어두운 회색 */
}


form button:last-of-type {
    background-color: #f5f5f5; /* 회색 배경 */
    color: #333;
    border: 1px solid #ccc;
}

form button:last-of-type:hover {
    background-color: #e0e0e0;
}


table {
