    font-size: 14px;
}

nav span:hover {
    text-decoration: underline; /* 구분자에 호버 시 밑줄 */
}

form {
    margin-bottom: 20px;
    display: flex;
    align-items: center; /* 입력 필드와 버튼 높이 정렬 */
    gap: 10px; /* 입력 필드와 버튼 간 간격 */
}

form label {
    font-size: 14px;
    color: #555;
    font-weight: bold;
    display: flex;
    align-items: center; /* 텍스트와 입력 필드 정렬 */
    gap: 5px; /* label 텍스트와 입력 필드 간격 */
}

form input {
    padding: 5px;
    font-size: 14px;
    border: 1px solid #ccc;
    border-radius: 4px;
    width: 150px;
    height: 30px; /* 버튼과 동일한 높이 */
    box-sizing: border-box; /* 패딩 포함 */
}

form input::placeholder {
    color: #bbb;
}

form button {
    background-color: #f5f5f5; /* 회색 배경 */
