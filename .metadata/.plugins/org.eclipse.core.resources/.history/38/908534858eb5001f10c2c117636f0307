/* index.css: 같은 라인에서 입력칸과 버튼 정렬 */
form {
    margin-bottom: 20px;
    display: flex;
    flex-wrap: wrap; /* 필요 시 줄바꿈 허용 */
    align-items: center; /* 같은 라인에서 세로 정렬 */
    gap: 10px; /* 입력칸과 버튼 간의 간격 */
}

form label {
    display: flex;
    align-items: center; /* 텍스트와 입력칸을 세로 정렬 */
    gap: 5px; /* 라벨 텍스트와 입력 필드 간격 */
    font-size: 14px;
    color: #555;
    font-weight: bold;
}

form input {
    padding: 5px;
    font-size: 14px;
    border: 1px solid #ccc;
    border-radius: 4px;
    width: 150px; /* 입력 필드의 너비 */
    height: 36px; /* 버튼과 동일한 높이 */
    box-sizing: border-box; /* 패딩 포함 */
}

form button {
    background-color: #f5f5f5; /* 회색 배경 */
    color: #333;
    border: 1px solid #ccc;
    padding: 0 15px; /* 버튼 좌우 간격 */
    font-size: 14px;
    border-radius: 4px;
    cursor: pointer;
    height: 36px; /* 입력 필드와 동일한 높이 */
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
}

form button:hover {
    background-color: #e0e0e0; /* 버튼 호버 시 약간 어두운 회색 */
}


form button:last-of-type {
    background-color: #f5f5f5; /* 회색 배경 */
    color: #333;
    border: 1px solid #ccc;
}

form button:last-of-type:hover {
    background-color: #e0e0e0;
}



table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

/* index.css: 테이블 텍스트 줄 바꿈 방지 및 너비 조정 */
table th, table td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: center;
    font-size: 14px;
    white-space: nowrap; /* 텍스트 줄 바꿈 방지 */
}

table th {
    background-color: #4CAF50;
    color: white;
    font-weight: bold;
}

table td {
    max-width: 200px; /* 셀의 최대 너비를 제한 */
    overflow: hidden;
    text-overflow: ellipsis; /* 텍스트가 너무 길 경우 말줄임표 표시 */
}

table tr:nth-child(even) {
    background-color: #f2f2f2;
}

table tr:hover {
    background-color: #ddd;
}


.message {
    font-size: 14px;
    color: #666;
    text-align: center;
    margin-top: 20px;
}
